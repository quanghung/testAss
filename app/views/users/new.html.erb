<h1 class="offset1 pull-left">Add User</h1>

<div class="row">
    <div class="span6 offset1">
      <%= form_for @user do |f| %>
      <%= render "shared/flash_messages" %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <%= f.label :email %>
      <%= f.text_field :email %>
        
      <%= f.label :password %>
      <%= f.password_field :password %>
  
      <%= f.label :password_confirmation, "Password Confirmation" %>
      <%= f.password_field :password_confirmation %>

      <%= f.label :skill %>

      <ul style="list-style :none" id="group_skills">
        <%= f.fields_for :user_skills do |builder| %>
        
            <li>
              <%= builder.check_box :skill_id, {checked: false},
                builder.object.skill.id, nil %>
              <%= builder.object.skill.name %>
              <ul id="skill_details_<%=builder.object.skill.id%>">
                <%= builder.fields_for :user_skill_details do |builder1|%>
                  <%=render "skill_detail_form",
                      build: builder1 %>
                <% end%>
              </ul>
            </li>
        <% end %>
      </ul>
      <br/>
      <%= f.submit "Add User",class: "btn btn-large btn-primary" %>
      <% end %>
    </div>
</div>
<script>
$(document).ready(function(){
  $("ul#group_skills > li > input[type=checkbox]").click(function(){
    var g_id = $(this).val();
    
    if($(this).is(':checked')){
      var skills_block = $(this).parent().find("ul");
      var request = $.ajax({
        url: "new",
        type: "GET",
        data: {
          checked: 1,
          g_id_check: g_id,
        },
        dateType: "html",
      });
      request.done(function(data){
        skill_detail_form = $(data).find("ul#skill_details_"+g_id).html();
        skills_block.html(skill_detail_form);
        $(this).parent().find("input[type=checkbox]").attr("checked", true)
      });
      request.fail(function(jqXHR, textStatus){
        skills_block.html("Connected: " + textStatus);
      });
      $(this).parent().find("input[type=checkbox]").attr("checked", true)
    }
    else{
      $(this).parent().find("input[type=checkbox]").attr("checked", false)
      $(this).parent().find("ul").html("");
    }
  })
})
</script>