<h1>All Users</h1>
<div>
<%= link_to "Add user", new_user_path,
    class: "btn btn-medium btn-primary" %>
</div>
<br/>
<ul>
  <% @users.each do |user| %>
  <li>
    <%= gravatar_for user %>
    <div >
      <span>
        <h3><%= user.name %></h3>
        <%= link_to "Skill", user_skills_path(user.id), class: "btn btn-small btn-primary" %>
      </span>
    </div>
  </li>
  <% end %>
</ul>
<%= will_paginate %>